<%= content_for(:page_title, @map.name) %>
<% content_for(:head) do %>
  <%= og_tags(title: @map.name,
              url: oligrapher_url(@map),
              image: screenshot_oligrapher_url(@map)) %>

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@twittlesis" />

<% end %>

<% if @is_pending_editor %>
  <div class="oligrapher-pending-editor-notice">
    The owner of this map has invited you to become an editor. If you accept you will be able to edit the map and your username will appear in the byline.
    &nbsp;
    <%= button_to "Accept", confirm_editor_oligrapher_path(@map) %>
  </div>
<% end %>

<div style="display: flex; flex-direction: column; height: 95%;">
  <%= content_tag(
    :div,
    id: "oligrapher",
    style: "flex: 1;",
    data: {
      controller: "oligrapher",
      oligrapher_config_value: @configuration.to_json
    }
  ){} %>
</div>
