<%= cache_unless user_signed_in?, 'anonymous_user_navmenu' do %>

  <% items = UserNavmenuPresenter.new(current_user) %>

  <% if items.size > 0 %>
    <ul class="nav mr-auto ml-2">
      <% items.each do |(header_text, url_or_links)| %>
        <% if url_or_links.is_a? String %>
	  <%= navbar_item dropdown: false do %>
	    <%= navbar_header_link header_text, href: url_or_links, dropdown: false %>
	  <% end %>
        <%  else %>
	  <%= navbar_item do %>
	    <%= navbar_header_link header_text %>
	    <%= navbar_dropdown url_or_links %>
	  <% end %>

        <% end %>
      <% end %>
    </ul>
  <% end %>
<% end %>
