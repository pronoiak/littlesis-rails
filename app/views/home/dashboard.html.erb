<% content_for(:page_title, "Dashboard") %>

<% content_for :head  do %>
  <%= stylesheet_link_tag "dashboard", media: "all" %>
<% end %>

<div class="row" id="dashboard">
  <div class="col-md-8 col-sm">

    <h1 class="pb-1">Dashboard</h1>

    <div class="mb-4" id="dashboard-explore">
      <%= link_to("maps", oligrapher_index_path, class: "btn btn-clear") %>
      <%= link_to("lists", lists_path, class: "btn btn-clear") %>
      <%= link_to("tags", tags_path, class: "btn btn-clear") %>
      <%= link_to("edits", edits_path, class: "btn btn-clear") %>
    </div>


    <form action="/search" method="get" id="dashboard-search-form" class="input-group mb-4">
      <input type="text" name="q" class="form-control" placeholder="search for a name" aria-label="Entity Search">

      <div class="input-group-append">
        <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
      </div>
    </form>

    <div class="mt-3" data-turbo="true">
      <%= render partial: 'dashboard_recent_edits' , locals: { page: 1, user_id: current_user.id } %>
    </div>

    <div class="mt-3" data-turbo="true">
      <%= render partial: 'dashboard_maps' , locals: { page: 1, current_user: current_user } %>
    </div>

  </div> <%# Left Column %>

  <div class="col-md-4 col-sm">
    <div id="dashboard-bulletins">
      <%= cache ['home_dashboard_bulletins', DashboardBulletin.last_bulletin_updated_at ] do %>
	<%= render partial: 'dashboard_bulletins/bulletins' %>
      <% end %>
    </div>
  </div>
</div>
