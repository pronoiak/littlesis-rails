<%= render partial: 'header', locals: { entity: @entity } %>

<% if user_signed_in? %>
  <%= render partial: 'actions', locals: { entity: @entity, current_user: current_user } %>
<% end %>

<div class="row mt-1">
  <div class="col">
    <div>
      <h2 class="d-inline-block">Source documents</h2>
      <% if user_signed_in? %>
        <a class="ps-2 d-inline-block" href="#add-reference-modal" data-bs-toggle="modal" id="add-new-refernce-link">Create new reference</a>
      <% end %>
    </div>

    <div data-controller="entity-references-table"
         data-entity-references-table-entityid-value="<%= @entity.id %>"
         data-entity-references-table-signedin-value="<%= user_signed_in? %>">
      <table data-entity-references-table-target="table">
      </table>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render partial: 'shared/reference_new', locals: { model: @entity, reference: nil } %>
<% end %>
