<turbo-frame id="add-relationship-page">
  <div data-controller="add-relationship" data-add-relationship-entity1-value="<%= @entity1.id %>" data-add-relationship-entity2-value="<%= @entity2.id %>">
    <div class="row">
      <div class="col col-md-auto">
        <h3 class="text-center">Creating a new relationship between<br/><%=  entity_link(@entity1) %><br/>and<br/><%=  entity_link(@entity2) %></h3>
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <div class="btn-group-vertical" role="group" aria-label="relationship categories">
          <% RelationshipCategory.for(@entity1, @entity2).each do |i|  %>
            <% next if i == Relationship::LOBBYING_CATEGORY %>
            <%= tag.button(RelationshipCategory.lookup[i]["name"],
                           id: "add-relationship-relationship-category-#{i}",
                           role: "button",
                           data: { "category_id" => i },
                           class: "category-select-button btn btn-light border") %>
          <% end  %>
        </div>
      </div>

      <div class="col-auto ms-4">
        <p><strong><%=  t('phrases.where_is_this') %></strong></p>
        <div class="thin-grey-bottom-border mt-1 mb-1"></div>

        <div data-add-relationship-target="widget" id="reference-widget-container"></div>

        <div class="mt-3">
          <div class="input-group mb-3">
            <input name="reference[url]" type="url" class="form-control" id="addRelationshipReferenceUrl" placeholder="Url">
          </div>
          <div class="input-group mb-3">
            <input name="reference[name]" type="text" class="form-control" placeholder="<%= t('vocab.name').capitalize %>" aria-label="<%= t('vocab.name').capitalize %>">
            <button class="btn btn-outline-secondary" type="button"><i class="bi bi-cloud-download pe-none"></i></button>
          </div>
        </div>

        <div class="mt-2">
          <button type="button" class="btn btn-primary" id="create-relationship-btn">Create Relationship</button>
        </div>

        <div class="row" data-relationship-creator-target="similarRelationships" style="display: none">
          <div class="col-sm-10 top-1em" style="height: 20px;">
	    <div id="similar-relationships" role="button" data-bs-toggle="collapse" data-bs-target="#similarRelationshipsDetails">
              <i class="bi bi-exclamation-triangle"></i><span class="text-danger pl-2">Similar relationships exist!</span>
	    </div>

            <div class="collapse" id="similarRelationshipsDetails">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
