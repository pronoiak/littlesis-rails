<% content_for(:page_title, "#{@entity.name} - Images") %>

<%= render partial: 'entities/header2', locals: { hide_summary: true } %>

<div class="row mt-3">
  <div class="col">
    <h3>
      Images
      &nbsp;<%= link_to('add', new_entity_image_path(@entity), class: "btn btn-secondary btn-sm") %>
    </h3>

    <table class="table entity-images-table">
      <% @entity.images.each do |image| %>
        <%= render partial: 'table_row', locals: { image: image } %>
      <% end %>
    </table>
  </div>
</div>
