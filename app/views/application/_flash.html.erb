<div class='row alert-dismissible'>
  <div class='col-6'>
    <div class='alert <%= flash_class(type) %>' data-closable=true>
      <%= message %>
      <button class='close' type='button' data-dismiss='alert' aria-label='Close'>
        <span aria-hidden='true'>&times;</span>
      </button>
    </div>
  </div>
</div>
