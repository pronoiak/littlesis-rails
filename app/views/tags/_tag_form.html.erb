<%= form_for(tag) do |f| %>
  <div>
    <%= f.label :name, class: 'form-label' %>:
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :description, class: 'form-label' %>:
    <%= f.text_area :description, class: 'form-control', cols: 8, rows: 4 %>
  </div>

  <div class="form-check mt-1 mb-1">
    <%= f.check_box :restricted, class: 'form-check-input' %>
    <%= f.label :restricted, class: 'form-check-label' %>

  </div>

  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
