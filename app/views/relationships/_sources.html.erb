<table class="table table-sm" id="source-links-table">
  <tbody>
    <% relationship.documents.each do |doc|  %>
      <tr>
        <td>
	  <%= link_to excerpt( (doc.name.blank? ? doc.url : doc.name) ), doc.url, 'target' => '_blank' %>
	  <% if user_signed_in? %>
            <%= link_to edit_document_path(doc) do %>
              <i class="bi bi-pencil-square ml-l hvr-pop"></i>
            <% end %>
          <% end %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>
